<%= render 'pages/home' unless user_signed_in? %>

<% if user_signed_in? %>
  <div>

      <div class="panel panel-default">

        <div class="panel-heading"><%= link_to "View Yours", user_profile_path(current_user), :class => "pull-right" %> <h4>Profiles</h4></div>
          
          <div class="panel-body">
            <% @user.each do |user| %>


        
            <div class="well well-sm">
                <div class="media">
                        <a class="thumbnail pull-left" href="#">
                            <img class="media-object" src="//placehold.it/90">
                        </a>
                    <div class="media-body">
                            <h4 class="media-heading"><%= link_to user.name, user_profile_path(user) %></h4>
                        <p><%= user.email %></p>
                        <p><%= button_to "Upvote", {:controller=>"profiles", :action => "upvote", :id => user.id}, :class => 'btn btn-success', method: :put %></p>
    <p>
    <%= button_to "Downvote", {:controller =>"profiles", :action => "downvote", :id => user.id}, :class => 'btn btn-danger', method: :put %></p>

    <p> Score: <%=(user.get_likes.size - user.get_dislikes.size) %></p>

                    </div>
                </div>
            </div>

          <% end %>
        </div>
      </div>
    </div>
  </div>
<% end %>





